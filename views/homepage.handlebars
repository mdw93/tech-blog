{{#each blogs as |blog| }}
<div class="row mb-4 project">
      <div class="col-md-7">
        <a href="/blog/{{blog.id}}">{{blog.name}}</a>
    <p>
      {{blog.description}}
    </p>
  <div class="col-md-7">
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>

  </div>
</div>
{{/each}}

